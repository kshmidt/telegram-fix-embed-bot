{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-import --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-import main.ts",
    "compile": "deno compile --allow-net --allow-env --allow-read --allow-import main.ts",
    "compile:linux": "deno compile --allow-net --allow-env --allow-read --allow-import --target x86_64-unknown-linux-gnu main.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2"
  },
  "fmt": {
    "indentWidth": 2,
    "semiColons": true
  }
}
